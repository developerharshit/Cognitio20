<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="7dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_event_name_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Corporate Bytes" />

            <TextView
                android:id="@+id/tv_event_descrip_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_event_name_new"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:breakStrategy="simple"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                tools:text="Event1" />

            <TextView
                android:id="@+id/tv_event_prize_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp"
                android:textColor="#000"
                android:textSize="15sp"
                tools:text="Prizes worth 100000" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_weight="35"
            android:scaleType="fitXY"
            tools:src="@drawable/placeholder2" />
    </LinearLayout>
</androidx.cardview.widget.CardView>